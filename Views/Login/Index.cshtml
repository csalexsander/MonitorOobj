
@{
    Layout = null;
}
@model MonitorOobj.Models.Login

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login - Monitor Oobj</title>
    <link href="~/css/Login.css" rel="stylesheet" />

</head>
<body>

    <div class="container">

        <div class="row" id="pwd-container">
            <div class="col-md-4"></div>

            <div class="col-md-4">
                <section class="login-form">
                    <form method="post" action="#" role="login">
                        <img src="~/images/oobjLogo.png" class="img-responsive" alt="" />
                        <input type="email" name="Email" placeholder="Email" required class="form-control input-lg" value="@Model.Email"/>

                        <input type="password" class="form-control input-lg" name="Senha" id="Senha" placeholder="Password" required="" value="@Model.Senha" />


                        <div class="pwstrength_viewport_progress"></div>


                        <button type="submit" name="go" formaction="Login/Logar" class="btn btn-lg btn-primary btn-block">Sign in</button>
                        <div>
                            <a href="#">Esqueci minha senha</a>
                        </div>

                    </form>
                </section>
            </div>

        </div>


    </div>

    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/js/datatables.min.js"></script>
    <script src="~/js/tether.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/Login.js"></script>
</body>
</html>
