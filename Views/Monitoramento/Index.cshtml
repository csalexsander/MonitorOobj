
@{
    ViewData["Title"] = "Monitoramento";
    Layout = "~/Views/Shared/LayoutMonitor.cshtml";
}

<link href="~/css/Monitoramento.css" rel="stylesheet" />

<div class="col-md-3">
    <canvas id="pie-chart-memory" width="200" height="200"></canvas>
</div>
<div class="col-md-3">
    <canvas id="pie-chart-message" width="200" height="200"></canvas>
</div>
<div class="col-md-3">
    <div class="panel">
        <div class="panel-heading" style="background-color: green; color:white;font-family:Arial;font-size: 24px; border-bottom: 5px solid white">
           Resposta
        </div>
        <div class="panel-body" style="background-color: blue; color:white; font-family:Arial; font-size: 18px;">
            7000 Mensagens
        </div>
    </div>
</div>
<div class="col-md-6">
    <div class="col-lg-4 col-sm-12">
        <div class="circle-tile">
            <a href="#">
                <div class="circle-tile-heading dark-blue">
                    <i class="fa fa-users fa-fw fa-3x">
                        <img src="~/images/black-truck-256.png" />
                    </i>
                </div>
            </a>
            <div class="circle-tile-content dark-blue">
                <div class="circle-tile-description text-faded">
                    Recebe
                </div>
                <div class="circle-tile-number text-faded">
                    265
                    <span id="sparklineA" />
                </div>
                <a href="#" class="circle-tile-footer">
                    More Info <i class="fa fa-chevron-circle-right" />
                </a>
            </div>
        </div>
    </div>
</div>
@section scripts{
<script src="~/js/Chart.min.js"></script>
<script src="~/js/Monitoramento.js"></script>
    }