
@{
    ViewData["Title"] = "Monitoramento";
    Layout = "~/Views/Shared/LayoutMonitor.cshtml";
}

<link href="~/css/Monitoramento.css" rel="stylesheet" />
<div>
    <div class="box box-success">
        <div class="box-header">
            <h3 class="box-title">Totais</h3>
        </div>
        <div class="box-body">
            <div class="col-md-12">
                <div class="col-lg-3 col-xs-6">
                    <!-- small box -->
                    <div class="small-box bg-aqua">
                        <div class="inner">
                            <div class="recebe">
                                <h3>0</h3>
                            </div>

                            <p>Recebe</p>
                        </div>
                        <div class="icon">
                            <i class="fa fa-truck"></i>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-xs-6">
                    <!-- small box -->
                    <div class="small-box bg-green-gradient">
                        <div class="inner">
                            <div class="resposta">
                                <h3>0</h3>
                            </div>

                            <p>Resposta</p>
                        </div>
                        <div class="icon">
                            <i class="fa fa-comments"></i>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-xs-6">
                    <!-- small box -->
                    <div class="small-box bg-red-gradient">
                        <div class="inner">
                            <div class="total">
                                <h3>0</h3>
                            </div>

                            <p>Total</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-android-list"></i>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-xs-6">
                    <!-- small box -->
                    <div class="small-box bg-yellow-gradient">
                        <div class="inner">
                            <div class="ping">
                                <h3>0</h3>
                            </div>

                            <p>Ping</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-connection-bars"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
    </div>

    <div class="box box-success">
        <div class="box-header">
            <h3 class="box-title">Porcentagens</h3>
        </div>
        <div class="box-body">

            <div class="col-md-12">
                <div class="col-xs-6 col-md-3 text-center">
                    <input type="text" class="knob Memoria" value="0" data-skin="tron" data-thickness="0.3" data-width="150" data-height="150" data-fgColor="#ff8300">
                    <div class="knob-label"><label><span class="fa fa-microchip"></span> Memoria (%)</label></div>
                </div>
                <div class="col-xs-6 col-md-3 text-center">
                    <input type="text" class="knob Critico" value="0" data-skin="tron" data-thickness="0.3" data-width="150" data-height="150" data-fgColor="#ff0000">
                    <div class="knob-label"><label><span class="fa fa-exclamation-circle"></span> CNPJ Criticos (%)</label></div>
                </div>
                <div class="col-xs-6 col-md-3 text-center">
                    <input type="text" class="knob Alerta" value="0" data-skin="tron" data-thickness="0.3" data-width="150" data-height="150" data-fgColor="#ffCC00">
                    <div class="knob-label"><label><span class="fa fa-exclamation-triangle"></span> CNPJ Alerta (%)</label></div>
                </div>
                <div class="col-xs-6 col-md-3 text-center">
                    <input type="text" class="knob Normal" value="0" data-skin="tron" data-thickness="0.3" data-width="150" data-height="150" data-fgColor="#00ff00">
                    <div class="knob-label"><label><span class="fa fa-check-circle"></span> CNPJ Normal (%)</label></div>
                </div>
            </div>

        </div>
        <!-- /.box-body -->
    </div>
</div>
        @section scripts{
            <script src="~/js/Monitoramento.js"></script>
        }
